<resources>

    <!-- Common -->

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingTop">@dimen/common_offset_horizontal_xl</item>
        <item name="android:paddingBottom">@dimen/common_offset_horizontal_xl</item>
        <item name="android:paddingStart">@dimen/common_offset_vertical_xl</item>
        <item name="android:paddingEnd">@dimen/common_offset_vertical_xl</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardCornerRadius">@dimen/common_radius</item>
        <item name="cardElevation">@dimen/common_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

</resources>